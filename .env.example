# Variabili d'ambiente per il backend
PORT=5000
NODE_ENV=development # development o production

# Database PostgreSQL
# Sostituisci con le credenziali reali del tuo DB in produzione
DATABASE_URL=postgresql://user:password@host:port/database

# Chiave segreta per i token JWT (genera una stringa lunga e casuale)
JWT_SECRET=un_segreto_molto_lungo_e_complesso_per_jwt

# Credenziali per l'invio delle email (Nodemailer)
EMAIL_HOST=smtp.your_email_provider.com # Es. smtp.sendgrid.net, smtp.mailgun.org
EMAIL_USER=your_email_username
EMAIL_PASS=your_email_password